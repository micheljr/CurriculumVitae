@model CurriculumVitae2.UI.Mvc.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
    var dob = DateTime.Parse("18/01/1995", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"));
    var leeftijd = DateTime.Now.Year - dob.Year;
    if ((dob.Month > DateTime.Now.Month) || (dob.Month == DateTime.Now.Month && dob.Day > DateTime.Now.Day)) {leeftijd--;}
}

<div class="voorstelling">
    <div class="titleImg">
        <h1 class="display-4">Welkom!</h1>
        <img alt="Headshot"  src="images/Headshot.jpg"/>
    </div>
    <p>Ik ben Michel Stroobants, @leeftijd jaar, wonende te Oud-Turnhout. Ik solliciteer bij Trivec voor de functie van C#-developer.</p>
    <div class="eigenschappenContainer">
        <div class="card">
            <p class="card-title">Om mezelf kort samen te vatten ben ik:</p>
            <ul>
                <li>  Leergierig</li>
                <li>  Zelfstandig</li>
                <li>  Teamplayer</li>
            </ul>
        </div>
        <div class="card">
            <p class="card-title">In mijn vrije tijd:</p>
            <ul>
                <li>  Basket</li>
                <li>  Gamen</li>
                <li>  Spendeer ik tijd met familie en vrienden</li>
            </ul>
        </div>
        <div class="card">
            <p class="card-title">Kan ik:</p>
            <ul>
                <li>  Java</li>
                <li>  Html, Css en javascript</li>
                <li>  C# ASP.NET/.NET Core</li>
            </ul>
        </div>
    </div>
</div>
<br>
<div class="Container">
    <h1>Opleiding</h1>
    <div class="subContainer opleidingen">
        @foreach (var item in Model.Opleidingen)
        {
            <partial name="OpleidingPartial" model="item"/>
        }
    </div>
</div>
<br>
<div class="Container">
    <h1>Werkervaring</h1>
    <div class="subContainer ervaringen">
        @foreach (var item in Model.Ervaringen)
        {
            <partial name="ErvaringPartial" model="item"/>
        }
    </div>
</div>
<div class="Container">
    <h1>Projecten</h1>
    <div class="subContainer projecten">
        @foreach (var item in Model.Projecten)
        {
            <partial name="ProjectPartial" model="item"/>
        }
    </div>
</div>
